/* pages/movie/movie.wxss */
@import './movie-list-temp/movie-list-temp.wxss';

.clearfix:before,
.clearfix:after {
	display: table;
	content: " "
}
.clearfix:after {
	clear: both
}
.clearfix{zoom:1;}

.left{float: left;}
.right{float: right;}

.search-wrap{padding: 10px;}
.search-box{position: relative;}
.search-box input{border-bottom:1px solid #ddd;padding: 5px 35px;border-radius: 20px;background-color: #f5f5f5;}

 .search-box icon{position: absolute;}
.search-box .search-ico{top:7px;left: 5px;}
.search-box .cancel-ico{top:3px;right: 5px;}
.search-box .placeholder{color: #ccc;} 